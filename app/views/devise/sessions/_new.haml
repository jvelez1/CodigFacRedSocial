= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = devise_error_messages!
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.email_field :email, autofocus: true,class:"mdl-textfield__input",required: true
    = f.label :email,class:"mdl-textfield__label grey-text"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.password_field :password, autofocus: true, class: "mdl-textfield__input"
    = f.label :password, class:"mdl-textfield__label grey-text"
  .top-space
    .row.text-left.middle-xs
      .col-xs-12.col-md-6
        .box
          =f.submit "Login", class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
      .col-xs-12.col-md-6
        .box
          =render "devise/shared/links"
